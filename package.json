{
  "name": "playwright-mcp-tests",
  "version": "1.0.0",
  "description": "Playwright project with MCP server for AI-assisted test generation",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "HEADLESS=false playwright test",
    "test:debug": "HEADLESS=false playwright test --debug",
    "test:ui": "HEADLESS=false playwright test --ui",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:cross-browser": "CROSS_BROWSER=true playwright test",
    "test:parallel": "playwright test --workers=8",
    "test:smoke": "playwright test --grep \"@smoke\"",
    "test:critical": "playwright test --grep \"@critical\"",
    "test:regression": "playwright test --grep \"@regression\"",
    "test:api": "playwright test tests/api/",
    "test:navigation": "playwright test --grep \"@navigation\"",
    "test:poe2": "playwright test --grep \"@poe2\"",
    "test:lol": "playwright test --grep \"@lol\"",
    "test:responsive": "playwright test --grep \"@responsive\"",
    "test:cookie": "playwright test --grep \"@cookie\"",
    "test:visual": "playwright test --grep \"@visual\"",
    "test:ci": "CI=true PARALLEL_WORKERS=8 playwright test --grep \"@smoke|@critical\"",
    "test:ci:full": "CI=true PARALLEL_WORKERS=8 playwright test",
    "test:ci:cross-browser": "CI=true CROSS_BROWSER=true PARALLEL_WORKERS=6 playwright test --grep \"@smoke\"",
    "test:report": "bash scripts/test-and-report.sh",
    "test:report:chromium": "bash scripts/test-and-report.sh --project=chromium",
    "test:report:smoke": "bash scripts/test-and-report.sh --grep @smoke",
    "test:report:critical": "bash scripts/test-and-report.sh --grep @critical",
    "test:report:regression": "bash scripts/test-and-report.sh --grep @regression",
    "test:report:api": "bash scripts/test-and-report.sh --grep @api",
    "test:report:ui": "bash scripts/test-and-report.sh --grep @ui",
    "test:report:navigation": "bash scripts/test-and-report.sh --grep @navigation",
    "test:report:poe2": "bash scripts/test-and-report.sh --grep @poe2",
    "test:report:lol": "bash scripts/test-and-report.sh --grep @lol",
    "test:report:responsive": "bash scripts/test-and-report.sh --grep @responsive",
    "test:report:cookie": "bash scripts/test-and-report.sh --grep @cookie",
    "test:report:visual": "bash scripts/test-and-report.sh --grep @visual",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report": "npm run allure:generate && npm run allure:open",
    "clean": "rm -rf allure-results allure-report test-results playwright-report",
    "codegen": "playwright codegen https://mobalytics.gg",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run format:check && npm run lint"
  },
  "keywords": [
    "playwright",
    "testing",
    "mcp",
    "ai-testing"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.12",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.4",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.7.1",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.56.1"
  }
}
