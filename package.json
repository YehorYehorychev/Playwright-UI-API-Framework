{
  "name": "playwright-mcp-tests",
  "version": "1.0.0",
  "description": "Playwright project with MCP server for AI-assisted test generation",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:parallel": "playwright test --workers=4",
    "test:report": "bash scripts/test-and-report.sh",
    "test:report:chromium": "bash scripts/test-and-report.sh --project=chromium",
    "test:report:smoke": "bash scripts/test-and-report.sh --grep @smoke",
    "test:report:api": "bash scripts/test-and-report.sh --grep @api",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report": "npm run allure:generate && npm run allure:open",
    "clean": "rm -rf allure-results allure-report test-results playwright-report",
    "codegen": "playwright codegen https://mobalytics.gg"
  },
  "keywords": [
    "playwright",
    "testing",
    "mcp",
    "ai-testing"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.12",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
